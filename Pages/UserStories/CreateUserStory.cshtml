@page
@model StoriesPro.Pages.UserStories.CreateUserStoryModel
@{
}

<h1>Create User Story</h1>

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div class="form-group">
                <label asp-for="@Model.UserStory.Id" class="control-lable"></label>
                <input asp-for="@Model.UserStory.Id" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="@Model.UserStory.Title" class="control-lable"></label>
                <input asp-for="@Model.UserStory.Title" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="@Model.UserStory.Description" class="control-lable"></label>
                <input asp-for="@Model.UserStory.Description" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="@Model.UserStory.BusinessValue" class="control-lable"></label>
                <input asp-for="@Model.UserStory.BusinessValue" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="@Model.UserStory.CreationDate" class="control-lable"></label>
                <input asp-for="@Model.UserStory.CreationDate" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="@Model.UserStory.Priority" class="control-lable"></label>
                <input asp-for="@Model.UserStory.Priority" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="@Model.UserStory.StoryPoints" class="control-lable"></label>
                <input asp-for="@Model.UserStory.StoryPoints" class="form-control" />
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<div>
    <a asp-page="/UserStories/GetAllUserStories">Back to List</a>
</div>
